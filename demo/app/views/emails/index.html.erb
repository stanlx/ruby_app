<div id = "product_list">
	<h1>Listing last emails sent</h1>

	<table class="table table-hover table-bordered">
	<% @emails.each do |email| %>
	  <tr class = "<%= cycle('list_line_odd', 'list_line_even') %>">
	    <td><%= email.id %></td>
            <td>Sender: <%= email.sender_id %></td>
	    <td>
	      <dl>
		<dt><%= email.subject %></dt>
		<dd><%= truncate(strip_tags(email.content)) %></dd>
	      </dl>
	    </td>
	    <td><%= email.send_date %></td>
	    <td>
	      <%= link_to 'Show', email %></br>
	    </td>
	  </tr>
	<% end %>
	</table>
</div>

